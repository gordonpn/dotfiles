{
  "title": "Media control",
  "rules": [
    {
      "description": "Control + Mute to Play/Pause",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "consumer_key_code": "mute",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "consumer_key_code": "play_or_pause"
            }
          ]
        }
      ]
    },
    {
      "description": "Control + Volume Decrement to Previous Track",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "consumer_key_code": "volume_decrement",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "consumer_key_code": "scan_previous_track"
            }
          ]
        }
      ]
    },
    {
      "description": "Control + Volume Increment to Next Track",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "consumer_key_code": "volume_increment",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "consumer_key_code": "scan_next_track"
            }
          ]
        }
      ]
    }
  ]
}
